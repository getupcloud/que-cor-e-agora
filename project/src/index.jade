- var description = 'Quer saber que cor hexadecimal é agora? Seus problemas acabaram!';
- var url = 'http://quecoreagora.guilhermeesteves.com';
- var ge = 'Guilherme Esteves';
- var googleAnalytics = 'UA-43322450-4';

- var facebookImage = './img/redes-sociais.jpg';
- var facebookImageWidth = '563';
- var facebookImageHeight = '563';
- var facebookAdmin = '100001899591977';
